<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url unless @product.image_url %>
</p>

<p>
  <strong>Product images</strong>
  <div class='product-images-slideshow'>
    <% unless @product.images.empty? %>
      <% @product.images.each do |product_image| %>
        <%= image_tag(product_image.file_path, size: '150x150', class: 'image') %>
      <% end %>
    <% end %>
  </div>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
