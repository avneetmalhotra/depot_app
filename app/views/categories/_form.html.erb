<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <%= render 'shared/form_errors', model_object: category %>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :category_name %>
  </div>

  <div class="field">
    <%= form.label :root_category_id %>
    <%= form.select :root_category_id, Category.all.collect { |c| [c.name, c.id] }, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
