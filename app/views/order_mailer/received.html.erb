<p>
  <%= t '.greeting', locale: @mail_language %> <%= @order.name %><br>
  <%= t '.intro.line1', locale: @mail_language %>.<br>
  <%= t '.intro.line2', count: @order.quantity, locale: @mail_language %>:<br>
</p>

<table>
  <thead>
    <tr>
      <th><%= t '.table.product', locale: @mail_language %></th>
      <th><%= t '.table.image', locale: @mail_language %></th>
      <th><%= t '.table.individual_price', locale: @mail_language %></th>
      <th><%= t '.table.quantity', locale: @mail_language %></th>
      <th><%= t '.table.total_price', locale: @mail_language %></th>
    </tr>
  </thead>

  <tbody>
    <% @order.line_items.each do |line_item|%>
      <tr>
        <td><%= line_item.product.title %></td>
        <td>
          <% if line_item.product.images.exists? %>
            <%= image_tag attachments[line_item.product.images.first.name].url, size: '150x150' %>
          <% else %>
            <%= image_tag attachments['no_image_available.gif'].url, size: '150x150'  %>
          <% end %>
        </td>
        <td><%= number_to_currency(line_item.product.price, locale: @mail_language) %></td>
        <td><%= line_item.quantity %></td>
        <td><%= number_to_currency(line_item.total_price, locale: @mail_language) %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="4"><%= t '.table.total_order_cost', locale: @mail_language %></td>
      <td><%= number_to_currency(@order.total_price, locale: @mail_language) %></td>
    </tr>
  </tfoot>
</table>
